<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        style="@style/team_style"
        android:text="@string/team_a" />

    <LinearLayout
        style="@style/linearLayout_style">

        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="@string/decrement"
            android:onClick="decrementTeamA"/>
        <TextView
            android:id="@+id/team_a_score"
            style="@style/text_score"
            android:text="0" />
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="@string/increment"
            android:onClick="incrementTeamA"/>
    </LinearLayout>

    <TextView
        style="@style/team_style"
        android:text="@string/team_b" />

    <LinearLayout
        style="@style/linearLayout_style"
        android:layout_marginBottom="48dp">

        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="@string/decrement_teamB"
            android:onClick="decrementTeamB"/>
        <TextView
            android:id="@+id/team_b_score"
            style="@style/text_score"
            android:text="0" />
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="@string/increment_teamB"
            android:onClick="incrementTeamB"/>
    </LinearLayout>

    <Button
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:onClick="reset"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>